<% is_static = 0 if local_assigns[:is_static].nil? %>
<% disabled = false unless defined? disabled %>
<% action_width = is_static == 1 ? 40 : 35 %>
<table class="table">
  <thead>
    <tr>
      <th width="<%= action_width %>%"><%= t('jaribio.misc.action', :default => 'Step Action') %></th>
      <th width="60%"><%= t('jaribio.misc.results', :default => 'Step Results') %></th>
      <% unless is_static == 1 %>
        <th width="5%" class="last">  
        <%= form_tag(new_test_case_step_path(@test_case), :method => 'get', :remote => true) do |f| %>
          <%= submit_tag "Add Step", :disabled => disabled %>
        <% end %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody id="sortable">
    <%= render :partial => 'test_cases/step', :collection => @test_case.steps, :as => :step, :locals => { :is_static => is_static, :disabled => disabled } %>
  </tbody>
</table>
<div id="step_form"></div>
