<!DOCTYPE html>
<html>
<head>
  <title>Jaribio</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    Jaribio
  </div>
  <div id="nav">
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to 'Logout', destroy_user_session_url, :method => :delete %></li>
      <% else %>
        <li><%= link_to 'Login', new_user_session_url %></li>
      <% end %>
      <li><%= link_to 'Cases', test_cases_url %></li>
      <li><%= link_to 'Suites', suites_url %></li>
      <li><%= link_to 'Plans', plans_url %></li>
    </ul>
  </div>
  <div id="content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
<%= yield %>

  </div>
  <div id="footer">
  </div>
</body>
</html>
