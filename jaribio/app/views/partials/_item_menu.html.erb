<td class="last">
  <%= link_to t('jaribio.views.actions.edit', :default => 'Edit'), url_for([:edit, item])  %>|
  <% if (item.class == Suite) %>
    <%= link_to t('jaribio.views.actions.add_cases', :default => 'Add Cases'), url_for([:add_cases, item]) %>|
  <% elsif (item.class == Plan) %>
    <%= link_to t('jaribio.views.actions.add_suites', :default => 'Add Suites'), url_for([:add_suites, item]) %>|
  <% end %>
  <%= link_to t('jaribio.views.actions.destroy', :default => 'Destroy'), item, :confirm => t('jaribio.views.actions.confirm', :default => 'Are you sure?'), :method => :delete %>
</td>
