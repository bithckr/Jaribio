<div class="block">
  <%= render :partial => "partials/navigation", :locals => { :active => 'list' } %>
  <div class="content">
    <div class="title"><%= t('jaribio.objects.suites', :default => 'Suites') %></div>
    <%= render :partial => "partials/search" %>
    <div class="inner">
      <table class="table">
        <tr>
          <th><%= t('jaribio.suites.name', :default => 'Name') %></th>
          <th><%= t('jaribio.suites.created_by', :default => 'Created By') %></th>
          <th class="last"></th>
        </tr>
        <% cnt = 0 %>
        <% @suites.each do |suite| %>
          <% cnt += 1 %>
          <tr class="<%= (cnt % 2 == 0) ? "even" : "odd" %>">
            <td><%= suite.name %></td>
            <td><%= suite.user.email %></td>
            <%= render :partial => "partials/item_menu", :locals => { :item => suite } %>
          </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        <div class="pagination">
          <%= paginate @suites %>
        </div>
      </div>
    </div>
  </div>
</div>
