<h1>Listing steps</h1>

<table>
  <tr>
    <th>Action</th>
    <th>Results</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.action %></td>
    <td><%= step.results %></td>
    <td><%= step.position %></td>
    <td><%= link_to 'Show', step %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

