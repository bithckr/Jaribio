<div class="block">
  <%= render :partial => "partials/navigation", :locals => { :active => nil } %>
  <div class="content">
    <h2 class="title">Viewing Plan: <%= @plan.name %></h2>
    <div class="inner">
      <div class="columns wat-cf">
        <div class="column left status-list">
          <!-- table -->
          <div class="table">
            <!-- tr -->
            <div>
              <!-- th -->
              <div><%= t('jaribio.objects.suite', :default => 'Suite') %> <%= t('jaribio.misc.name', :default => 'Name') %></div>
              <!-- th -->
              <div><%= t('jaribio.objects.suite', :default => 'Suite') %> <%= t('jaribio.misc.status', :default => 'Status') %></div>
            </div>
            <%= render :partial => 'plans/suite', :collection => @plan.suites %>
          </div>
        </div>
        <div class="column right status-list">
          <!-- table -->
          <div class="table">
            <!-- tr -->
            <div>
              <!-- th -->
              <div><h3><%= t('jaribio.objects.suite', :default => 'Suite') %> <%= @suite.name %></h3></div>
            </div>
            <!-- tr -->
            <div>
              <!-- th -->
              <div><%= t('jaribio.objects.case', :default => 'Case') %> <%= t('jaribio.misc.name', :default => 'Name') %></div>
              <!-- th -->
              <div><%= t('jaribio.actions.actions', :default => 'Actions') %></div>
            </div>
            <%= render :partial => 'plans/test_case', :collection => @suite.test_cases %>
          </div>
        </div>
      </div>
      <%= link_to 'Edit', edit_plan_path(@plan) %>
    </div>
  </div>
</div>
