<div class="block">
  <%= render :partial => "partials/navigation", :locals => { :active => nil } %>
  <div class="content">
    <h2 class="title">Viewing plan</h2>
    <div class="inner">
      <div class="grouping">
        <div class="label">Name:</div>
        <div class="text_area"><%= @plan.name %></div>
      </div>
      <div class="grouping">
        <div class="label">Current suites:</div>
        <%= render :partial => 'suites/suite_list', :locals => { :suites => @current_suites, :plan => nil } %>
      </div>
      <%= link_to 'Edit', edit_plan_path(@plan) %>
    </div>
  </div>
</div>
